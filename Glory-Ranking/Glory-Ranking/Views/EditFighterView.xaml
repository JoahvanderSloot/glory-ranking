<UserControl x:Class="Glory_Ranking.Views.EditFighterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="White">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Grid Margin="0,0,0,20">
            <TextBox x:Name="searchBox"
                     FontSize="16"
                     FontWeight="SemiBold"
                     Padding="10,5"
                     BorderBrush="Black"
                     VerticalContentAlignment="Center"
                     TextChanged="searchBox_TextChanged"/>
            <TextBlock x:Name="txtSearchPlaceholder"
                       Text="Search fighter..."
                       Foreground="#888"
                       FontStyle="Italic"
                       VerticalAlignment="Center"
                       Margin="13,0,0,0"
                       IsHitTestVisible="False"/>
        </Grid>

        <!-- Editable Fields -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="400">

            <!-- Fighter Name -->
            <Grid Margin="0,0,0,15">
                <TextBox x:Name="fighterName"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Padding="10,5,40,5"
                         BorderBrush="Black"
                         IsEnabled="False"
                         VerticalContentAlignment="Center"
                         Text="Name..."/>
                <Button x:Name="editNameButton"
                        Width="28" Height="28"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="EditName_Click"
                        BorderBrush="{x:Null}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Source="/Assets/Sprites/EditButtonSprite.png"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="setNameButton"
                        Width="28" Height="28"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="SetName_Click"
                        Visibility="Hidden" BorderBrush="{x:Null}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Source="/Assets/Sprites/DoneButtonSprite.png"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Fighter Weightclass (Text or Dropdown) -->
            <Grid Margin="0,0,0,15">
                <TextBox x:Name="fighterWeightclass"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Padding="10,5,40,5"
                         BorderBrush="Black"
                         IsEnabled="False"
                         VerticalContentAlignment="Center"
                         Text="Weightclass..."/>

                <ComboBox x:Name="fighterWeightDropdown"
                          FontSize="16"
                          FontWeight="SemiBold"
                          BorderBrush="Black"
                          Padding="8,2"
                          Visibility="Hidden"/>

                <Button x:Name="editWeightButton"
                        Width="28" Height="28"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="EditWeight_Click"
                        BorderBrush="{x:Null}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Source="/Assets/Sprites/EditButtonSprite.png"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="setWeightButton"
                        Width="28" Height="28"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="SetWeight_Click"
                        Visibility="Hidden" BorderBrush="{x:Null}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Source="/Assets/Sprites/DoneButtonSprite.png"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Fighter ELO -->
            <TextBox x:Name="fighterElo"
                     FontSize="16"
                     FontWeight="SemiBold"
                     Padding="10,5"
                     BorderBrush="Black"
                     IsEnabled="False"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,15"
                     Text="Ranking..."/>

            <!-- Fighter Peak ELO -->
            <TextBox x:Name="fighterPeakElo"
                     FontSize="16"
                     FontWeight="SemiBold"
                     Padding="10,5"
                     BorderBrush="Black"
                     IsEnabled="False"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,15"
                     Text="Peak ranking..."/>
            <CheckBox x:Name="checkRetiredOrNot"
                      Content="Retired"
                      FontSize="16"
                      FontWeight="SemiBold"
                      IsEnabled="False"
                      Checked="checkRetiredOrNot_Checked"
                      Unchecked="checkRetiredOrNot_Unchecked" VerticalContentAlignment="Center"/>

            <!-- Active/Retired -->
        </StackPanel>
    </Grid>
</UserControl>
