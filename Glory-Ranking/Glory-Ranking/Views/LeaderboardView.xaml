<UserControl x:Class="Glory_Ranking.Views.LeaderboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Division ComboBox -->
        <ComboBox x:Name="leaderboardDivision"
              Grid.Column="0"
              VerticalAlignment="Top"
              Width="360"
              Height="35"
              FontSize="16"
              FontWeight="SemiBold"
              Foreground="Black"
              BorderBrush="Black"
              SelectionChanged="leaderboardDivision_SelectionChanged"
              Margin="0,16,10,0"
              SelectedIndex="5" VerticalContentAlignment="Center">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <ComboBoxItem>Heavyweight</ComboBoxItem>
            <ComboBoxItem>Light heavyweight</ComboBoxItem>
            <ComboBoxItem>Middleweight</ComboBoxItem>
            <ComboBoxItem>Welterweight</ComboBoxItem>
            <ComboBoxItem>Featherweight</ComboBoxItem>
            <ComboBoxItem>All weightclasses</ComboBoxItem>
        </ComboBox>

        <!-- Open weight ranking Button -->
        <Button x:Name="openWeightRankingBtn"
        MouseEnter="MouseHoverEnter"
        MouseLeave="MouseHoverExit"
        Grid.Column="1"
        VerticalAlignment="Top"
        Margin="0,19,0,0"
        Width="30" Height="30"
        BorderBrush="{x:Null}"
        ToolTip="Open full leaderboard"
        Click="openWeightRankingBtn_Click"
        Foreground="{x:Null}"
        RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Button.RenderTransform>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Image Source="/Assets/Sprites/GoButtonSprite.png" Width="30" Height="30"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Retired Fighters Toggle -->
        <CheckBox x:Name="retiredCheckbox" Content="Retired" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Top" Margin="0,16,-15,0" Height="35" IsChecked="False" RenderTransformOrigin="0.5,1.482" Grid.Column="2" HorizontalAlignment="Right" Width="120">
            <CheckBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.75" ScaleY="0.8"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="-6.874"/>
                </TransformGroup>
            </CheckBox.RenderTransform>
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid>
                                    <!-- Outer pill -->
                                    <Border x:Name="border" Width="120" Height="35" CornerRadius="18" Background="#DDD" BorderBrush="#AAA" BorderThickness="1"/>
                                    <!-- Knob -->
                                    <Ellipse x:Name="switchKnob" Width="31" Height="31" Fill="White" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    <!-- Label -->
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#4CAF50"/>
                                        <Setter TargetName="switchKnob" Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="border" Property="Background" Value="#CCC"/>
                                        <Setter TargetName="switchKnob" Property="Fill" Value="#EEE"/>
                                        <Setter Property="Foreground" Value="#888"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </CheckBox.Style>
        </CheckBox>

        <!-- Leaderboard List -->
        <ListBox x:Name="leaderboardBox"
             Grid.ColumnSpan="3"
             Margin="0,60,0,0"
             BorderBrush="Black"
             FontWeight="Normal"
             FontSize="13"
             Background="White"/>

        <Label Content="Weightclass:"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           Width="105"
           Height="26"
           Grid.ColumnSpan="3"
           Margin="0,-10,0,0"
           FontSize="13"
           FontWeight="Bold"/>
    </Grid>
</UserControl>
