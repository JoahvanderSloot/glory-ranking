<UserControl x:Class="Glory_Ranking.Views.AddFightView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ADD NEW FIGHTER -->
        <Expander x:Name="AddFighterExpander"
                  Header="Add New Fighter"
                  FontWeight="Bold"
                  BorderBrush="Black"
                  BorderThickness="1"
                  Margin="0,0,0,10"
                  Expanded="AddFighterExpander_Expanded">
            <StackPanel Margin="10">

                <!-- Fighter Name -->
                <Grid Margin="0,0,0,8">
                    <TextBox x:Name="newFighterNameInput"
                             Height="32"
                             FontSize="14"
                             TextChanged="newFighterNameInput_TextChanged"/>
                    <TextBlock x:Name="newFighterNameOverlay"
                               Text="New fighter name..."
                               Foreground="Gray"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- Weight Class Dropdown -->
                <ComboBox x:Name="weightClassDropdown"
                          Height="32"
                          Margin="0,0,0,8"
                          SelectionChanged="WeightClassDropdown_SelectionChanged">
                    <ComboBoxItem Content="Heavyweight"/>
                    <ComboBoxItem Content="Light Heavyweight"/>
                    <ComboBoxItem Content="Middleweight"/>
                    <ComboBoxItem Content="Welterweight"/>
                    <ComboBoxItem Content="Featherweight"/>
                    <ComboBoxItem Content="None"/>
                </ComboBox>

                <TextBlock x:Name="fighterAddedInfoText"
                           FontStyle="Italic"
                           FontSize="14"
                           Foreground="Blue"
                           Margin="0,4,0,4"/>

                <Button x:Name="submitNewFighterButton"
                        Content="Add Fighter"
                        Height="36"
                        Width="140"
                        Click="Button_Click"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="1"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Expander>

        <!-- ADD FIGHT OUTCOME -->
        <Expander x:Name="AddFightExpander"
                  Header="Add Fight Outcome"
                  FontWeight="Bold"
                  BorderBrush="Black"
                  BorderThickness="1"
                  Grid.Row="1"
                  Expanded="AddFightExpander_Expanded">
            <StackPanel Margin="10">

                <!-- Winner -->
                <Grid Margin="0,0,0,8">
                    <TextBox x:Name="winnerTextInput"
                             Height="32"
                             FontSize="14"
                             TextChanged="fightInput_TextChanged"/>
                    <TextBlock x:Name="winnerTextOverlay"
                               Text="Winner..."
                               Foreground="Gray"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- Loser -->
                <Grid Margin="0,0,0,8">
                    <TextBox x:Name="loserTextInput"
                             Height="32"
                             FontSize="14"
                             TextChanged="fightInput_TextChanged"/>
                    <TextBlock x:Name="loserTextOverlay"
                               Text="Loser..."
                               Foreground="Gray"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                </Grid>

                <TextBlock x:Name="newFightOutputLabel"
                           FontStyle="Italic"
                           FontSize="14"
                           Foreground="Blue"
                           Margin="0,4,0,4"/>

                <Button x:Name="submitFightButton"
                        Content="Add Fight"
                        Height="36"
                        Width="140"
                        Click="Button_Click"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="1"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>
