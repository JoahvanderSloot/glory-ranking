<Window x:Class="Glory_Ranking.FullLeaderboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Full Division Ranking"
        Height="400"
        MinHeight="385"
        MaxHeight="900"
        Width="450"
        MaxWidth="450"
        MinWidth="450"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Label x:Name="divisionLabel"
               Content="Weightclass"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Width="430"
               FontSize="18"
               FontWeight="Bold"
               Margin="0,4,0,0"
               HorizontalContentAlignment="Center"/>

        <CheckBox x:Name="retiredCheckbox"
                  Content="Show retired fighters"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="10,35,0,0"
                  FontSize="13"
                  Checked="RetiredCheckbox_Changed"
                  Unchecked="RetiredCheckbox_Changed"/>

        <ListBox x:Name="fullLeaderboardList"
                 Margin="10,60,10,10"
                 FontSize="13"
                 MouseDoubleClick="LeaderboardBox_MouseDoubleClick"/>
    </Grid>
</Window>
