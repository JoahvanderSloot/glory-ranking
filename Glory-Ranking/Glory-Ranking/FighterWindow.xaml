<Window x:Class="Glory_Ranking.FighterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Glory_Ranking"
        mc:Ignorable="d"
        Title="FighterWindow" Height="400" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="name" Content="Name" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="380" Background="#FFD2D2D2"/>
        <Label x:Name="weight" Content="Weightclass" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="380" Background="#FFD2D2D2"/>
        <Label x:Name="elo" Content="Elo" HorizontalAlignment="Center" Margin="0,72,0,0" VerticalAlignment="Top" Width="380" Background="#FFD2D2D2"/>
        <Label x:Name="peakElo" Content="Peak elo" HorizontalAlignment="Center" Margin="0,103,0,0" VerticalAlignment="Top" Width="380" Background="#FFD2D2D2"/>
        <Label x:Name="retired" Content="Retired" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" Width="380" Background="#FFD2D2D2"/>
        <Label x:Name="wins" Content="Wins" HorizontalAlignment="Center" Margin="0,166,0,0" VerticalAlignment="Top" Width="380" Background="#FFD2D2D2"/>
        <Label x:Name="losses" Content="Losses" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Width="380" Background="#FFD2D2D2"/>
        <Label x:Name="biggestEloGain" Content="Biggest elo gain" HorizontalAlignment="Center" Margin="0,228,0,0" VerticalAlignment="Top" Width="380" Background="#FFD2D2D2"/>
        <Label x:Name="biggestEloLoss" Content="Biggest elo loss" HorizontalAlignment="Center" Margin="0,259,0,0" VerticalAlignment="Top" Width="380" Background="#FFD2D2D2"/>
        <Button Content="Edit fighter" HorizontalAlignment="Left" Margin="10,299,0,0" VerticalAlignment="Top" Height="30" Width="105" HorizontalContentAlignment="Left" Click="Button_Click"/>
    </Grid>
</Window>
