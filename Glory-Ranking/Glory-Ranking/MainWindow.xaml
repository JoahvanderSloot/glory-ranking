<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Glory_Ranking.MainWindow"
        Title="MainWindow" Height="450" Width="800" MinWidth="615" MinHeight="450"  MaxWidth="800" MaxHeight="500" Background="#FFEBEBEB">
    <Grid>
        <TabControl TabStripPlacement="Left" Background="#FFEBEBEB" BorderBrush="#FFE9E9E9" Foreground="#FFEDEDED" SelectionChanged="TabControl_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabControl}">
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>

                <Style TargetType="{x:Type TabPanel}">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                </Style>

                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="40, 15, 40, 15"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Leaderboard" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
                <TabItem.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="40"/>
                    </TransformGroup>
                </TabItem.RenderTransform>
                <Grid Background="White">
                    <ListBox x:Name="leaderboardBox" av:ItemsSource="{av:SampleData ItemCount=10}" Margin="20,85,20,10" BorderBrush="Black" FontWeight="Normal" FontSize="20"/>
                    <ComboBox x:Name="leaderboardDivision" HorizontalAlignment="Left" Margin="20,38,0,0" VerticalAlignment="Top" Width="277" BorderBrush="Black" RenderTransformOrigin="0.5,0.5" Text="Division" Foreground="Black" SelectionChanged="leaderboardDivision_SelectionChanged">
                        <ComboBox.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFF0F0F0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </ComboBox.Background>
                        <ComboBoxItem FontWeight="Normal">Heavyweight</ComboBoxItem>
                        <ComboBoxItem FontWeight="Normal">Light heavyweight</ComboBoxItem>
                        <ComboBoxItem FontWeight="Normal">Middelweight</ComboBoxItem>
                        <ComboBoxItem FontWeight="Normal">Welterweight</ComboBoxItem>
                        <ComboBoxItem FontWeight="Normal">Featherweight</ComboBoxItem>
                        <ComboBoxItem FontWeight="Normal">All weightclasses</ComboBoxItem>
                    </ComboBox>
                    <TextBox x:Name="chooseDivPrev" Text="Choose Division"
             IsHitTestVisible="False"
             Background="{x:Null}"
             Panel.ZIndex="999"
             Margin="20,38,175,0"
             VerticalAlignment="Top" Height="33" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" Foreground="#FF868686" SelectionTextBrush="{x:Null}"/>
                    <CheckBox x:Name="retiredCheckbox" Content="Retired&#xD;&#xA;fighters" HorizontalAlignment="Left" Margin="307,38,0,0" VerticalAlignment="Top" Height="33" Width="81" BorderBrush="Black" FontWeight="Bold" FontSize="13" IsChecked="False" RenderTransformOrigin="0.305,0.63">
                        <CheckBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1.15" ScaleY="1.15"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-1.728" Y="0.644"/>
                            </TransformGroup>
                        </CheckBox.RenderTransform>
                    </CheckBox>
                </Grid>
            </TabItem>

            <TabItem Header="Edit Fighter" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
                <TabItem.Background>
                    <ImageBrush/>
                </TabItem.Background>
                <TabItem.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="80"/>
                    </TransformGroup>
                </TabItem.RenderTransform>
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="19*"/>
                        <RowDefinition Height="88*"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="searchBox" HorizontalAlignment="Left" Margin="81,52,0,0" VerticalAlignment="Top" Width="154" Height="30" BorderBrush="Black" Background="#7BCFCFCF" FontWeight="DemiBold" RenderTransformOrigin="0.5,0.5" FontSize="15" VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center" TextChanged="searchBox_TextChanged" Grid.RowSpan="2">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="1.8" ScaleX="1.8"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>
                    <Label x:Name="txtSearchPlaceholder" Content="Search fighter..." Background="Transparent" Opacity="0.5" IsHitTestVisible="False" Margin="19,46,0,0" VerticalAlignment="Top" Height="48" HorizontalAlignment="Left" Width="170" VerticalContentAlignment="Center" Grid.RowSpan="2"/>
                    <Rectangle HorizontalAlignment="Left" Height="40" Margin="19,64,0,0" Stroke="Black" VerticalAlignment="Top" Width="278" Grid.Row="1"/>
                    <Rectangle HorizontalAlignment="Left" Height="40" Margin="19,124,0,0" Stroke="Black" VerticalAlignment="Top" Width="278" Grid.Row="1"/>
                    <Rectangle HorizontalAlignment="Left" Height="40" Margin="19,184,0,0" Stroke="Black" VerticalAlignment="Top" Width="278" Grid.Row="1"/>
                    <Rectangle HorizontalAlignment="Left" Height="40" Margin="19,244,0,0" Stroke="Black" VerticalAlignment="Top" Width="278" Grid.Row="1"/>
                    <TextBox x:Name="fighterName" HorizontalAlignment="Left"  Margin="19,64,0,0" Text="Name..." VerticalAlignment="Top" Height="40" Width="278" FontWeight="DemiBold" Foreground="Silver" Padding="6,5,0,0" ScrollViewer.VerticalScrollBarVisibility="Hidden" IsEnabled="False" Background="{x:Null}" BorderBrush="Black" SelectionBrush="#FF7797B1" SelectionTextBrush="{x:Null}" Grid.Row="1"/>
                    <TextBox x:Name="fighterWeightclass" HorizontalAlignment="Left"  Margin="19,124,0,0" TextWrapping="Wrap" Text="Weightclass..." VerticalAlignment="Top" Height="40" Width="278" FontWeight="DemiBold" Foreground="Silver" Padding="6,5,0,0" IsEnabled="False" BorderBrush="Black" Background="{x:Null}" SelectionBrush="#FF7797B1" SelectionTextBrush="{x:Null}" Grid.Row="1"/>
                    <TextBox x:Name="fighterElo" HorizontalAlignment="Left"  Margin="19,184,0,0" TextWrapping="Wrap" Text="Ranking..." VerticalAlignment="Top" Height="40" Width="278" FontWeight="DemiBold" Foreground="Silver" Padding="6,5,0,0" IsEnabled="False" BorderBrush="Black" Background="{x:Null}" SelectionTextBrush="{x:Null}" SelectionBrush="#FF7797B1" Grid.Row="1"/>
                    <TextBox x:Name="fighterPeakElo" HorizontalAlignment="Left"  Margin="19,244,0,0" TextWrapping="Wrap" Text="Peak ranking..." VerticalAlignment="Top" Height="40" Width="278" FontWeight="DemiBold" Foreground="Silver" Padding="6,5,0,0" IsEnabled="False" BorderBrush="Black" Background="{x:Null}" SelectionBrush="#FF7797B1" SelectionTextBrush="{x:Null}" Grid.Row="1"/>
                    <Button x:Name="editNameButton"
        HorizontalAlignment="Left"
        Margin="302,66,0,0"
        VerticalAlignment="Top"
        Height="36"
        Width="35"
        BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click" Grid.Row="1" Background="{x:Null}">
                        <Button.RenderTransform>
                            <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" />
                        </Button.RenderTransform>
                        <Button.RenderTransformOrigin>0.5,0.5</Button.RenderTransformOrigin>
                        <Image x:Name="editNameButtonIMG" Height="30" Width="30" Source="/Assets/EditButtonSprite.png"/>
                    </Button>
                    <Button x:Name="setNameButton"
                        HorizontalAlignment="Left"
                        Margin="302,66,0,0"
                        VerticalAlignment="Top"
                        Height="36"
                        Width="35"
                        BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click" Background="{x:Null}" Grid.Row="1">

                        <Button.RenderTransform>
                            <ScaleTransform x:Name="scaleTransform1" ScaleX="1" ScaleY="1" />
                        </Button.RenderTransform>
                        <Button.RenderTransformOrigin>0.5,0.5</Button.RenderTransformOrigin>

                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                        To="1.1" Duration="0:0:0.1" />
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                        To="1.1" Duration="0:0:0.1" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                        To="1" Duration="0:0:0.1" />
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                        To="1" Duration="0:0:0.1" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Image x:Name="setNameButtonIMG" Height="30" Width="30" Source="/Assets/DoneButtonSprite.png"/>
                    </Button>
                    <Button x:Name="editWeightButton"
                        HorizontalAlignment="Left"
                        Margin="303,126,0,0"
                        VerticalAlignment="Top"
                        Height="36"
                        Width="34"
                        BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click" Grid.Row="1" Background="{x:Null}">
                        <Button.RenderTransform>
                            <ScaleTransform x:Name="scaleTransform3" ScaleX="1" ScaleY="1" />
                        </Button.RenderTransform>
                        <Button.RenderTransformOrigin>0.5,0.5</Button.RenderTransformOrigin>
                        <Image x:Name="editWeightButtonIMG" Height="30" Width="30" Source="/Assets/EditButtonSprite.png"/>
                    </Button>
                    <Button x:Name="setWeightButton"
                        HorizontalAlignment="Left"
                        Margin="303,126,0,0"
                        VerticalAlignment="Top"
                        Height="36"
                        Width="35"
                        BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click" Background="{x:Null}" Grid.Row="1">

                        <Button.RenderTransform>
                            <ScaleTransform x:Name="scaleTransform2" ScaleX="1" ScaleY="1" />
                        </Button.RenderTransform>
                        <Button.RenderTransformOrigin>0.5,0.5</Button.RenderTransformOrigin>

                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                        To="1.1" Duration="0:0:0.1" />
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                        To="1.1" Duration="0:0:0.1" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                        To="1" Duration="0:0:0.1" />
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                        To="1" Duration="0:0:0.1" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Image x:Name="setWeightButtonIMG" Height="30" Width="30" Source="/Assets/DoneButtonSprite.png"/>
                    </Button>
                    <CheckBox x:Name="checkRetiredOrNot" Content="Active" HorizontalAlignment="Left" Margin="19,38,0,0" VerticalAlignment="Top" Height="21" Background="{x:Null}" BorderBrush="Black" FontWeight="DemiBold" FontSize="15" IsChecked="False" Grid.Row="1" IsEnabled="False" Foreground="Silver"/>
                </Grid>
            </TabItem>

            <TabItem Header="Add Fight" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
                <TabItem.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="120"/>
                    </TransformGroup>
                </TabItem.RenderTransform>
                <Grid Background="White">
                    <Expander x:Name="newFighterWeight" HorizontalAlignment="Left" Height="202" Header="Weightclass" Margin="-1,77,0,0" VerticalAlignment="Top" Width="298" BorderBrush="{x:Null}" FontWeight="DemiBold" Background="{x:Null}" Panel.ZIndex="1" RenderTransformOrigin="0.5,0.5" Padding="17, 0, 0, 0">
                        <Expander.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="1"/>
                            </TransformGroup>
                        </Expander.RenderTransform>
                        <Grid Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70*"/>
                                <ColumnDefinition Width="139*"/>
                                <ColumnDefinition Width="67*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Background="White" Grid.ColumnSpan="3" Margin="0,0,0,40">
                                <RadioButton x:Name="weightHeavy" Content="Heavyweight" Background="{x:Null}" BorderBrush="Black" FontWeight="Light" FontSize="17" VerticalContentAlignment="Center" Checked="RadioButton_Checked" IsChecked="False"/>
                                <RadioButton x:Name="weightLightHeavy" Content="Light heavyweight" Background="{x:Null}" BorderBrush="Black" FontWeight="Light" FontSize="17" VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                                <RadioButton x:Name="weightMiddle" Content="Middleweight" Background="{x:Null}" BorderBrush="Black" FontWeight="Light" FontSize="17" VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                                <RadioButton x:Name="weightWelter" Content="Welterweight" Background="{x:Null}" BorderBrush="Black" FontWeight="Light" FontSize="17" VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                                <RadioButton x:Name="weightFeather" Content="Featherweight" Background="{x:Null}" BorderBrush="Black" FontWeight="Light" FontSize="17" VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                                <RadioButton x:Name="weightNone" Content="None" Background="{x:Null}" BorderBrush="Black" FontWeight="Light" FontSize="17" VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                            </StackPanel>
                        </Grid>
                    </Expander>
                    <Rectangle HorizontalAlignment="Left" Height="34" Margin="19,38,0,0" Stroke="Black" VerticalAlignment="Top" Width="278"/>
                    <Label Content="Add new fighter" HorizontalAlignment="Left" Margin="19,38,0,0" VerticalAlignment="Top" Height="34" Width="278" FontWeight="Bold" VerticalContentAlignment="Center" FontSize="18"/>
                    <TextBox x:Name="newFighterNameInput" HorizontalAlignment="Left" Margin="19,112,0,0" VerticalAlignment="Top" Width="278" Height="41" VerticalContentAlignment="Center" FontWeight="Normal" FontStyle="Italic" BorderBrush="Black" SelectionTextBrush="{x:Null}" Background="{x:Null}" TextChanged="newFighterNameInput_TextChanged"/>
                    <Label x:Name="newFighterNameOverlay" Content="New fighter name..." HorizontalAlignment="Left" Margin="19,112,0,0" VerticalAlignment="Top" Width="278" FontWeight="Normal" FontStyle="Italic" IsEnabled="False" Panel.ZIndex="-1" VerticalContentAlignment="Center" Background="{x:Null}" Cursor=""/>
                    <Button x:Name="submitNewFighterButton" HorizontalAlignment="Left" Margin="302,38,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.308,-0.071" Height="34" Width="34" FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click" Foreground="{x:Null}">
                        <Image Height="30" Width="30" Source="/Assets/AddButtonSprite.png"/>
                    </Button>
                    <TextBlock x:Name="fighterAddedInfoText" HorizontalAlignment="Left" Margin="19,153,0,0" VerticalAlignment="Top" Width="317" Height="23" FontSize="16" FontWeight="Light" FontStyle="Italic" Foreground="Blue"/>
                    <Rectangle HorizontalAlignment="Left" Height="34" Margin="19,185,0,0" Stroke="Black" VerticalAlignment="Top" Width="278"/>
                    <Label Content="Add fight outcome" HorizontalAlignment="Left" Margin="19,185,0,0" VerticalAlignment="Top" Height="34" Width="278" FontWeight="Bold" VerticalContentAlignment="Center" FontSize="18"/>
                    <Button x:Name="submitFightButton" HorizontalAlignment="Left" Margin="302,185,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.308,-0.071" Height="34" Width="34" FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click" Foreground="{x:Null}">
                        <Image Height="30" Width="30" Source="/Assets/AddButtonSprite.png"/>
                    </Button>
                    <Label Content="Winner:" HorizontalAlignment="Left" Margin="19,217,0,0" VerticalAlignment="Top" Width="280" Height="30" Background="{x:Null}" Foreground="Lime" FontWeight="DemiBold" FontStyle="Italic" FontSize="18"/>
                    <Label Content="Loser:" HorizontalAlignment="Left" Margin="19,287,0,0" VerticalAlignment="Top" Width="280" Height="30" Background="{x:Null}" FontWeight="DemiBold" FontStyle="Italic" FontSize="18" Foreground="Red"/>
                    <TextBox x:Name="winnerTextInput" HorizontalAlignment="Left" Margin="19,247,0,0" VerticalAlignment="Top" Width="278" Height="45" FontWeight="Normal" Background="{x:Null}" BorderBrush="Black" SelectionTextBrush="{x:Null}" VerticalContentAlignment="Center" TextChanged="fightInput_TextChanged"/>
                    <TextBox x:Name="loserTextInput" HorizontalAlignment="Left" Margin="21,317,0,0" VerticalAlignment="Top" Width="278" Height="45" FontWeight="Normal" Background="{x:Null}" BorderBrush="Black" SelectionTextBrush="{x:Null}" VerticalContentAlignment="Center" TextChanged="fightInput_TextChanged"/>
                    <Label x:Name="winnerTextOverlay" Content="Winning fighter name..." HorizontalAlignment="Left" Margin="19,247,0,0" VerticalAlignment="Top" Height="45" Width="278" VerticalContentAlignment="Center" Background="{x:Null}" Foreground="#FF6D6D6D" FontWeight="Normal" FontStyle="Italic" IsEnabled="False" Panel.ZIndex="-1"/>
                    <Label x:Name="loserTextOverlay" Content="Losing fighter name..." HorizontalAlignment="Left" Margin="21,317,0,0" VerticalAlignment="Top" Height="45" Width="276" VerticalContentAlignment="Center" Background="{x:Null}" Foreground="#FF6D6D6D" FontWeight="Normal" FontStyle="Italic" IsEnabled="False" Panel.ZIndex="-1"/>
                    <TextBlock x:Name="newFightOutputLabel" HorizontalAlignment="Left" Margin="19,362,0,0" VerticalAlignment="Top" Width="317" Height="23" FontSize="16" FontWeight="Light" FontStyle="Italic" Foreground="Blue"/>
                </Grid>
            </TabItem>

            <TabItem Header="Edit JSON" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
                <TabItem.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="160"/>
                    </TransformGroup>
                </TabItem.RenderTransform>
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
