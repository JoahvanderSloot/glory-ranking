<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Glory_Ranking.MainWindow"
        Title="MainWindow" Height="450" Width="800" MinWidth="600" MinHeight="450" Background="#FFEBEBEB">
    <Grid>
        <TabControl TabStripPlacement="Left" Background="#FFEBEBEB" BorderBrush="#FFE9E9E9" Foreground="#FFEDEDED">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabControl}">
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>

                <Style TargetType="{x:Type TabPanel}">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                </Style>

                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="40, 15, 40, 15"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Leaderboard" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
                <TabItem.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="40"/>
                    </TransformGroup>
                </TabItem.RenderTransform>
                <Grid Background="White">
                    <ListBox x:Name="leaderboardBox" av:ItemsSource="{av:SampleData ItemCount=5}" Margin="20,85,20,10" BorderBrush="Black"/>
                    <ComboBox HorizontalAlignment="Left" Margin="20,38,0,0" VerticalAlignment="Top" Width="450" BorderBrush="Black">
                        <ComboBox.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFF0F0F0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </ComboBox.Background>
                    </ComboBox>
                    <CheckBox x:Name="retiredCheckbox" Content="Retired&#xD;&#xA;fighters" HorizontalAlignment="Left" Margin="495,38,0,0" VerticalAlignment="Top" Height="33" Width="81" BorderBrush="Black" FontWeight="Bold" FontSize="13" IsChecked="False" RenderTransformOrigin="0.647,0.567">
                        <CheckBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1.15" ScaleY="1.15"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="2.426" Y="0.332"/>
                            </TransformGroup>
                        </CheckBox.RenderTransform>
                    </CheckBox>
                </Grid>
            </TabItem>

            <TabItem Header="Edit Fighter" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
                <TabItem.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="80"/>
                    </TransformGroup>
                </TabItem.RenderTransform>
                <Grid Background="White"/>
            </TabItem>

            <TabItem Header="Add Fight" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
                <TabItem.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="120"/>
                    </TransformGroup>
                </TabItem.RenderTransform>
                <Grid Background="White"/>
            </TabItem>

            <TabItem Header="Edit JSON" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
                <TabItem.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="160"/>
                    </TransformGroup>
                </TabItem.RenderTransform>
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
