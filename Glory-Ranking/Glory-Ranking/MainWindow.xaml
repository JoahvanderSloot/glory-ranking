<Window x:Class="Glory_Ranking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Glory_Ranking.Views"
        Title="Glory Ranking" Height="400" Width="600" MinHeight="390" MinWidth="580">
    <Grid>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Leaderboard">
                <views:LeaderboardView x:Name="LeaderboardTab"/>
            </TabItem>
            <TabItem Header="Edit Fighter">
                <views:EditFighterView x:Name="EditFighterTab"/>
            </TabItem>
            <TabItem Header="Add Fight">
                <views:AddFightView x:Name="AddFightTab"/>
            </TabItem>
            <TabItem Header="JSON">
                <views:EditJsonView x:Name="EditJsonTab"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
