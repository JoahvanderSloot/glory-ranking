<Window x:Class="Glory_Ranking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Glory_Ranking.Views"
        Title="Glory Ranking" Height="600" Width="900"
        Background="#1E1E1E" WindowStartupLocation="CenterScreen">

    <Grid>
        <TabControl Margin="10"
                    Background="#2D2D2D"
                    Foreground="White"
                    FontSize="16"
                    TabStripPlacement="Top">

            <!-- Leaderboard -->
            <TabItem Header="🏆 Leaderboard">
                <views:LeaderboardView />
            </TabItem>

            <!-- Add Fight -->
            <TabItem Header="⚔️ Add Fight">
                <views:AddFightView />
            </TabItem>

            <!-- Edit Fighter -->
            <TabItem Header="👊 Edit Fighter">
                <views:EditFighterView />
            </TabItem>

            <!-- Edit JSON -->
            <TabItem Header="🧾 Edit JSON">
                <views:EditJsonView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
